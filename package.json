{
    "name": "telegram-bot-cloudflare",
    "version": "1.2.0",
    "description": "A simple Telegram bot implementation using Cloudflare Workers",
    "main": "src/bot/index.ts",
    "scripts": {
        "dev": "wrangler dev --local --persist-to .wrangler/state",
        "deploy": "wrangler deploy",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:run": "vitest run",
        "build": "tsc",
        "check": "tsc --noEmit"
    },
    "dependencies": {
        "@jsquash/png": "^3.0.1",
        "@jsquash/webp": "^1.4.0",
        "fast-png": "^6.3.0",
        "hono": "^4.6.14",
        "pdf-lib": "^1.17.1",
        "wasm-webp": "^0.0.2"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20231218.0",
        "@types/node": "^20.10.5",
        "@vitest/coverage-v8": "^2.1.8",
        "@vitest/ui": "^2.1.8",
        "happy-dom": "^16.3.0",
        "nock": "^13.5.6",
        "typescript": "^5.3.3",
        "vitest": "^2.1.8",
        "wrangler": "4.6.0"
    }
}
