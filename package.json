{
    "name": "telegram-bot-cloudflare",
    "version": "1.2.0",
    "description": "A simple Telegram bot implementation using Cloudflare Workers",
    "main": "src/bot/index.ts",
    "scripts": {
        "dev": "wrangler dev --local --persist-to .wrangler/state",
        "deploy": "wrangler deploy",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:run": "vitest run",
        "build": "tsc",
        "check": "tsc --noEmit"
    },
    "dependencies": {
        "hono": "^4.6.14"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20231218.0",
        "@types/node": "^20.10.5",
        "@vitest/coverage-v8": "^2.1.8",
        "@vitest/ui": "^2.1.8",
        "happy-dom": "^16.3.0",
        "nock": "^13.5.6",
        "typescript": "^5.3.3",
        "vitest": "^2.1.8",
        "wrangler": "^3.22.1"
    }
}